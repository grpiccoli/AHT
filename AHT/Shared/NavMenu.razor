<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">AHT</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Inicio
            </NavLink>
        </li>
        <AuthorizeView>
            <NotAuthorized>
                <li class="nav-item px-3">
                    <a class="nav-link" id="register" href="Identity/Account/Register"><span class="oi oi-person" aria-hidden="true"></span> Registrarse</a>
                </li>
                <li class="nav-item px-3">
                    <a class="nav-link" id="login" href="Identity/Account/Login"><span class="oi oi-account-login" aria-hidden="true"></span> Iniciar sesión</a>
                </li>
            </NotAuthorized>
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="submit">
                        <span class="oi oi-plus" aria-hidden="true"></span> Ingresar Exámen
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="results">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Informes
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
